<%- include("../partials/header") %>

    <div class="container mt-5">
        <h1>Edit <%= currentForm.title %></h1>
        <form id="fullForm" action="/forms/<%= currentForm.id %>?_method=PUT" method="POST">
                
        </form>
        <div class="row" id="addSectionLinkRow">
            <div class="col card-text"><strong><a href="" class="addSectionLink"><i class="fas fa-plus"></i> Add Section</a></strong></div>
        </div>
    </div>
    <template id="blankSection">
        <section class="card shadow-sm mb-2 formSection draggable" id="" >
            <div class="card-body">
                <div class="row mb-2 sectionTitleRow">
                    <div class="col"><button class="btn btn-link sectionTitle" data-toggle="collapse" data-target="" aria-expanded="false" aria-controls="" type="button" ><h3 id="">New Section</h3></button></strong></div>
                    <div class="col text-right"><i class="fas fa-arrows-alt sectionDragHandle"></i></div>
                </div>
                <div class="card-title sectionBody collapse" id="" data-parent="#fullForm" aria-labelledby="">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label for="" class="input-group-text sectionTitleFieldLabel"><strong>Section Title</strong></label>
                        </div>
                        <input type="text" name="form[section][title]" id="" class="form-control form-control-lg sectionTitleField" placeholder="">
                    </div>
                    <hr/>
                    <div class="card-text questionList">
                        
                    </div>
                    <div class="row">
                        <div class="col card-text">
                            <strong>
                                <a href="" class="addQuestionLink"><i class="fas fa-plus"></i> Add Question</a>
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="blankQuestion">
        <div class="card shadow-sm mb-2 formQuestion draggable preventCollapse">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col text-right" data-toggle="collapse" role="button" aria-expanded="true" aria-controls=""><i class="fas fa-arrows-alt questionDragHandle"></i></div>
                </div>
                <div class="form-row">
                    <div class="col-12 col-md">
                        <div class="input-group mb-2 questionTitleDiv">
                            <div class="input-group-prepend">
                                <label for="" class="input-group-text questionTitleLabel">Question Title</label>
                            </div>
                            <input type="text" name="form[sections][questions][title]" id="" class="form-control questionTitleField" placeholder="Question Title, To Be Shown To Applicants">
                        </div>
                    </div>
                    <div class="col-12 col-md">
                        <div class="input-group mb-2 questionIdDiv">
                            <div class="input-group-prepend">
                                <label for="" class="input-group-text questionIdLabel">Unique Question ID</label>
                            </div>
                            <input type="text" name="form[sections][questions][elementId]" id="" class="form-control questionIdField" required>
                        </div>
                    </div>
                </div>
                <div class="questionBody collapse show">
                    <div class="card-text">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <label for="" class="input-group-text questionTypeLabel">Question Type</label>
                                    </div>
                                    <select name="form[sections][questions][inputType]" id="" class="form-control typeSelector">
                                        
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 typeOptions">
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row requiredOrFollowUp">
                    <div class="col-6">
                        <div class="form-check form-check-inline requiredCheckboxDiv">
                            <input type="checkbox" name="form[sections][questions][isRequired]" id="" class="form-check-input isRequiredCheckbox" >
                            <label for="" class="form-check-label">Required?</label>
                        </div>
                        <div class="form-check form-check-inline followUpCheckboxDiv">
                            <input type="checkbox" name="form[sections][questions][hasFollowUp]" id="" class="form-check-input hasFollowUpCheckbox" >
                            <label for="" class="form-check-label">Follow Up Questions?</label>
                        </div>
                    </div>
                </div>
                <div class="row questionDeleteButtonDiv">
                    <div class="col text-right">
                        <i class="fas fa-trash-alt btn questionDeleteButton"></i>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="blankAddOptionLink">
        <div class="row addOptionLinkContainer">
            <div class="col card-text"><a href="" class="addOptionLink"><i class="fas fa-plus"></i> Add Option</a></div>
        </div>
    </template>

    <template id="blankSelectOption">
        <option value=""></option>
    </template>

    <template id="blankQuestionOption">
        <div class="input-group mb-2 questionOption draggable preventCollapse">
            <div class="input-group-prepend">
                <label for="" class="input-group-text optionDragHandle"><i class="fas fa-arrows-alt"></i></label>
            </div>
            <input type="text" name="form[sections][questions][values]" id="" class="form-control valueOption" placeholder="New Option">
        </div>
    </template>
    <template id="blankFollowUpSection">
        <div class="form-row mt-3 border rounded followUpSection">
            <div class="col">
                <div class="row">
                    <div class="col-6">
                        <h4>Follow Up Questions</h4>
                    </div>
                    <hr />
                </div>
                <div class="row">
                    <div class="col followUpSectionBody">
                    </div>
                </div>
            </div>
        </div>
    </template>
    <script>
        var inputTypes = <%- JSON.stringify(inputTypes) %>;
        var currentForm = <%- JSON.stringify(currentForm) %>;
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.10.1/Sortable.js" integrity="sha256-PEd7B+4PvniSL2AVhTbw7Z/Iy1aquB0/EVqATlCATkk=" crossorigin="anonymous"></script>

<%- include("../partials/footer") %>